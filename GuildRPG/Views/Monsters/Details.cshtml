@model GuildRPG.Models.Monster

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Monster</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Health)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Health)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Damage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Damage)
        </dd>
        <p>Rozmiar zdjęcia: @(Model.ImageData?.Length ?? 0) bajtów</p>
        @if (Model.ImageData != null)
        {
            <div>
                <img src="@Url.Action("GetImage", "Monsters", new { id = Model.Id })" alt="Zdjęcie potwora" style="width: 300px; height: auto;" />
            </div>
        }
        else
        {
            <p><em>Brak zdjęcia</em></p>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
