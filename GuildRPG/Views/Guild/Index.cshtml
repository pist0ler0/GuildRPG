@model List<Mercenary>;

@{
    ViewData["Title"] = "Gildia";
}
<h1>Gildia</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ExperiencePoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().MaxHealth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CurrentHealth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Gold)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperiencePoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxHealth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentHealth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Damage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gold)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete From Guild</a>
                </td>
            </tr>
        }
    </tbody>
</table>

